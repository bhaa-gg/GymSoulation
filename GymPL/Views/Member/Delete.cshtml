  <div class="container mt-5">
          <div class="row justify-content-center">
            <div class="col-md-6">
              <div class="card p-5 shadow text-center">
                <h1 class="text-center ">@ViewBag.MemberName</h1>
                <h1 class="text-center ">@ViewBag.MemberId</h1>
                <p class="fs-3 text-primary-color mb-4">
                  Are you sure you want to delete this member?
                </p>

                <div class="alert alert-warning text-start" role="alert">
                  <strong>Warning!</strong> This action cannot be undone. All member data will be
                  permanently deleted.
                </div>

                <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                    <input name="id" value="@ViewBag.MemberId" type="text" readonly hidden class="visually-hidden" />
                  <div class="buttons d-flex justify-content-between gap-3">
                    <a asp-controller="Member" asp-action="Index" class="btn-outline flex-fill"
                      >NO</a>
                    <button type="submit" class="btn-fill flex-fill">Yes</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>